<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/styles.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @model quiniela.Models.tblUsers 
    @{
        ViewBag.Title = "crearUsuario";
        Layout = "";
    }

    <div class="container login-container">
            <div class="row">
                <div class="col-md-6 offset-3 login-form-1">
                    <h3>Crear usuario</h3>
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @using (Html.BeginForm("crearUsuario", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(model => model.vName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.vName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vLastName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.vLastName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vLastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vUserName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.vUserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vUserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.vPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.vConfirmPassword, htmlAttributes: new { @class = "control-label col-md-10" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.vConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.vConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Imagen</label>
                            <div class="form-group">
                                <input type="file" name="perfilPicture" />
                            </div>
                            @Html.ActionLink("Regresar", "index", null, new { @class = "label label-info" })
                        </div>
                        <div class="form-group">
                            <center>
                                <input type="submit" class="btnSubmit" value="Registrar" />
                            </center>
                        </div>
                    }
                </div>
            </div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
</body>
</html>

